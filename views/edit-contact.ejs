<%- include('layouts/header') %>
<%- include('layouts/nav') %>

<div class="container mt-3">
    <div class="row">
        <div class="col-md-6">
            <h2>Edit Data</h2>
            <% if (errors !== undefined) { %>
              <div class="alert alert-danger" role="alert">
                <ul>
                  <% for (let i = 0; i < errors.length; i++) { %> 
                    <li>
                      <%= errors[i].msg %>
                    </li>
                  <% } %> 
                </ul>
              </div> 
            <% } %>
            <!-- post method karna submit sesuatu
            action sama asal pas di controller pake post -->
            <form method="post" action="/contact?_method=PUT">
              <!-- tampung no hp lama -->
              <input type="hidden" name="tmpKey" value="<%=contacts.noHP%>" >
              <div class="mb-3">
                <label for="nama" class="form-label">Nama</label>
                <input type="text" class="form-control" id="nama" name="nama" required value="<%= contacts.nama %>">
              <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= contacts.email %>">
              <div class="mb-3">
                  <label for="noHP" class="form-label">No HP</label>
                <input type="text" class="form-control" id="noHP" name="noHP" required value="<%= contacts.noHP %>">
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>

<%- include('layouts/footer') %>